<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".fragment.HomeFrag">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@color/background"
            app:cardElevation="5dp">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardMenu"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="2dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/menu" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toRightOf="@+id/cardMenu"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/setting" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:text="az-adi"
                    android:textColor="@color/purple_200"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/cdProfile"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/arrow" />

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cdProfile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:src="@drawable/profileimg" />

                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:visibility="gone" />




            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="210dp"
                    android:layout_margin="5dp"
                    android:id="@+id/card1"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:id="@+id/rlSelect"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="2dp"
                            android:layout_marginBottom="2dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/images" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/star" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card1"
                    android:id="@+id/txTitle1"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="center_horizontal"
                    android:text="Lauren Bacall"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txTitle1"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="6sp"
                    android:id="@+id/txdes1"
                    android:layout_marginLeft="10dp"
                    android:text=" sometimes it&apos;s even"
                    android:textColor="#313131"
                    android:textSize="12sp"
                    android:textStyle="normal" />




                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:id="@+id/card2"
                    android:layout_toRightOf="@+id/card1"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/images" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/star" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card2"
                    android:layout_toRightOf="@+id/card1"
                    android:id="@+id/txTitle2"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="center_horizontal"
                    android:text="Lauren Bacall"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txTitle2"
                    android:layout_toRightOf="@+id/card1"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="6sp"
                    android:id="@+id/txDes2"
                    android:layout_marginLeft="10dp"
                    android:text=" sometimes it&apos;s even."
                    android:textColor="#313131"
                    android:textSize="12sp"
                    android:textStyle="normal" />


                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:id="@+id/card3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/txdes1"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/images" />


                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/star" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card3"
                    android:id="@+id/txTitle3"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="center_horizontal"
                    android:text="Lauren Bacall"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txTitle3"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginLeft="10dp"
                    android:text=" sometimes it&apos;s even."
                    android:textColor="#313131"
                    android:textSize="12sp"
                    android:textStyle="normal" />




                <com.google.android.material.card.MaterialCardView
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="200dp"
                    android:layout_margin="5dp"
                    android:layout_below="@id/txDes2"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/card3"
                    android:id="@+id/card4"
                    app:cardCornerRadius="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                        <ImageView

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="0dp"
                            android:layout_marginBottom="0dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/images" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="3dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_gravity="bottom"
                            android:layout_marginEnd="15dp"
                            android:src="@drawable/star" />

                    </RelativeLayout>


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card4"
                    android:id="@+id/txTitle4"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/card3"
                    android:fontFamily="@font/google_sans_medium"
                    android:gravity="center_horizontal"
                    android:text="Lauren Bacall"
                    android:textColor="#000000"
                    android:textSize="13sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/card3"
                    android:layout_below="@+id/txTitle4"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="6sp"
                    android:layout_marginLeft="10dp"
                    android:text=" sometimes it&apos;s even."
                    android:textColor="#313131"
                    android:textSize="12sp"
                    android:textStyle="normal" />








            </RelativeLayout>







        </LinearLayout>




</RelativeLayout>