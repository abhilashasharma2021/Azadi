<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:scaleType="fitXY"
                android:src="@drawable/profile" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="800dp"
                android:layout_below="@+id/ivProfile"
                android:layout_marginTop="-55dp"
                android:background="@drawable/greyround">

                <TextView
                    android:id="@+id/txName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="39sp"
                    android:text="Rose Jhonson"
                    android:textColor="#459090"
                    android:textSize="18sp"
                    android:textStyle="normal" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/ivBack"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:layout_toLeftOf="@+id/flat_image_view1"
                    android:visibility="visible"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp">


                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center"
                        android:src="@drawable/comment" />

                </com.google.android.material.card.MaterialCardView>


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/flat_image_view1"
                    android:layout_width="80dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="25dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Follow"
                        android:textColor="@color/black"
                        android:textSize="10sp" />


                </com.google.android.material.card.MaterialCardView>


                <TextView
                    android:id="@+id/txPlace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txName"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="2sp"
                    android:text="Jaipur, India"
                    android:textColor="#444547"
                    android:textSize="11sp"
                    android:textStyle="normal" />


                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/flat_image_view"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/txPlace"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/background"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Gym Trainer"
                        android:textColor="@color/black"
                        android:textSize="11sp" />


                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/txDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/flat_image_view"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/google_sans_medium"
                    android:lineSpacingExtra="3sp"
                    android:text="Whether that love is new love or decade. Australia,\n
officially known as the Commonwealth of Australia,  is a sovereign \n country comprising the mainland of the Australian continent, the island  \n of Tasmania, and numerous smaller islands."
                    android:textColor="#444547"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@+id/txDescription"
                    android:layout_marginTop="60dp"
                    android:background="#dbdbdb" />

                <LinearLayout
                    android:id="@+id/llMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txDescription"
                    android:orientation="horizontal"
                    android:weightSum="3">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardIv"
                        android:layout_width="80dp"
                        android:layout_height="80dp"

                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="5dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/profileimg" />

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardIv1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="5dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/profileimg" />

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cardIv2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="2dp"
                        app:cardBackgroundColor="@color/background"
                        app:cardCornerRadius="40dp"
                        app:cardElevation="5dp">


                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/profileimg" />

                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llMain"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/google_sans_medium"
                        android:gravity="center"
                        android:text="Yoga"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Yoga"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:fontFamily="@font/google_sans_medium"
                        android:text="Yoga"
                        android:textColor="@color/black"
                        android:textSize="11sp" />

                </LinearLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/ll"
                    android:layout_marginTop="10dp"
                    android:background="@color/greyOne"
                    android:elevation="6dp"
                    app:tabSelectedTextColor="@color/purple_200"
                    android:inputType="textCapCharacters"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:tabGravity="fill"
                    app:tabTextAppearance="@style/CustomTextAppearanceTab"
                    app:tabMode="fixed"
                    app:tabTextColor="@color/grey" />

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/tabLayout"/>


            </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>